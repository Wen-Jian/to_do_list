<div id = "banner" class=" navbar-fixed-top">
	<div id = "left" class=" col-xs-6 col-sm-6 col-md-6 col-lg-6">
		<div class="logo">
			<h1>To do List !</h1>
		</div>
		
	</div>
	<div id = "right" class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
	
		<div class="make-new-button">
			
			<%= link_to 'Sign-up',new_user_path %>

		</div>
		
	</div>
</div>
<div class="container login">
	<div class="explain col-xs-6 col-sm-6 col-md-6 col-lg-6">
		<h1>List something need to be done!</h1>
		<ul>
			<li>Creat an account</li>
			<li>Make a new list</li>
			<li>Check the notes, if you have already done it</li>

		</ul>
	</div>
	<div class="login-form col-xs-6 col-sm-6 col-md-6 col-lg-6">
		<%= form_for :login, :url => users_path do |f| %>
			<div class="form-group form">
				<%= f.label :account %>
				<%= f.text_field :account, class: "form-control" %>
			</div>
			<div class="form-group form">
				<%= f.label :password %>
				<%= f.password_field :password, class: "form-control" %>
			</div>

			<%= f.submit "login", class: "btn btn-primary " %>
		

		<% end %>

		<% if @error != "" && @error != nil%>

		<p><%= @error %></p>
		

		<% end %>

	</div>

</div>
